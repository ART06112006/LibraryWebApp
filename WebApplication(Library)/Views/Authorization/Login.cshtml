
@{
    Layout = "~/Views/Shared/_LibraryMainLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>

</head>
<body>
    <header>
        <h1 align="center">Login</h1>
    </header>

    <main>
        <div class="d-flex flex-row justify-content-center">
            <form id="registerUser" action="@Url.Action("Login", "Authorization")" method="post" class="d-flex flex-column align-items-center" style="width: 50%">
                <div class="form-row">
                    <div>
                        <label for="login">Login</label>
                        <input type="text" class="form-control" id="login" placeholder="supermetafounder32" name="Login" required>
                        <div class="invalid-feedback" hidden>
                            Please, choose a login
                        </div>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="Password" required>
                        <div class="invalid-feedback" hidden>
                            Please, choose a password
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-row align-items-center justify-content-evenly mt-2">
                    <button class="btn btn-primary me-1" type="submit">Login</button>
                    <a class="btn btn-primary ms-1" href="@Url.RouteUrl(new {controller = "Authorization", action = "Register"})">Register</a>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
